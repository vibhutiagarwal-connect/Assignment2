#include <stdio.h>

int main() {
    int arr[] = {7, 9, 12, 6, 8, 5, 4};
    int n = sizeof(arr) / sizeof(arr[0]);
    int target = 8;
    int found = -1;

    for (int i = 0; i < n; i++) {
        if (arr[i] == target) {
            found = i;
            break;
        }
    }

    if (found != -1)
        printf("Element %d found at index %d\n", target, found);
    else
        printf("Element %d not found in the array\n", target);

    return 0;
}


# output 
Element 8 found at index 4
